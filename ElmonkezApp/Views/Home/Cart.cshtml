@model IEnumerable<ElmonkezApp.Models.Service>

@using ElmonkezApp.Models;

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- inner page banner -->
<div id="inner_banner" class="section inner_banner_section_about">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h1 class="page-title">Cart</h1>
                            <ol class="breadcrumb">
                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="active">Cart</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end inner page banner -->
<!-- end inner page banner -->

<div class="section padding_layout_1 Shopping_cart_section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="product-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Service</th>
                                
                                <th class="text-center">Price</th>
                                
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-sm-8 col-md-6">
                                        <div class="media">
                                            <a class="thumbnail pull-left" href="#"> <img class="media-object" src="/@item.Image" alt="#"></a>
                                            <div class="media-body">
                                                <h4 class="media-heading"><a asp-route-id="@item.ServiceId" asp-controller="Home" asp-action="ServiceDetails">@item.ServiceName</a></h4>
                                                
                                            </div>
                                        </div>
                                    </td>
                                    
                                    <td class="col-sm-1 col-md-1 text-center"><p class="price_table">$ @item.Price</p></td>
                                    
                                    <td class="col-sm-1 col-md-1">
                                    <a type="button" class="bt_main" asp-action="Remove" asp-controller="Home" asp-route-id="@item.ServiceId" ><i class="fa fa-trash"></i> Remove</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <table class="table">
                        <tbody>
                            <tr class="cart-form">
                                <td class="actions">
                                    <div class="coupon">
                                        <input name="coupon_code" class="input-text" id="coupon_code" placeholder="Coupon code" type="text">
                                        <input class="button" name="apply_coupon" value="Apply coupon" type="submit">
                                    </div>
                                    <input class="button" name="update_cart" value="Update cart" disabled="" type="submit">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="shopping-cart-cart">
                    <table class="table table-borderless">
                        <tbody>
                            <tr class="head-table">
                                <td><h5>Cart Totals</h5></td>
                                <td class="text-right"></td>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr class="head-table">
                                    <td>@item.ServiceName</td>
                                    <td class="text-right">$ @item.Price</td>
                                </tr>
                            }

                            <tr>
                                <td><h3>Total</h3></td>
                                <td class="text-right"><h4>$ @Model.Sum(c => c.Price)</h4></td>
                            </tr>
                            <tr>
                                <td><a  class="button" asp-action="Service" asp-controller="Home">Continue Shopping</a></td>
                                <td><a class="button" asp-action="Checkout" asp-controller="Home">Checkout</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
